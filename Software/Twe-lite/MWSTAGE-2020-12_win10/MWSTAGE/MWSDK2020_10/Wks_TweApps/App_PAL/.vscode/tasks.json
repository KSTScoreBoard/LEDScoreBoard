// .vscode/tasks.json
{
    "version": "2.0.0",
    // "windows": { "options": { "shell": { "executable": "bash.exe", "args": ["-c", "-l"] } } },
    "tasks": [
        {
            "label": "Clean for EndDevice",
            "type": "shell",
            "windows": {
                "command": "sh",
                "args": [
                    "-c", "rm -rfv objs_*"
                ],
                "options": {
                    "env": {
                        "PATH": "..\\..\\..\\..\\Tools\\MinGW\\msys\\1.0\\bin"
                    }
                }
            },
            "linux": {
                "command": "sh",
                "args": [
                    "-l", "-c", "rm -rfv objs_*"
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "-l", "-c", "rm -rfv objs_*"
                ]
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "options": {
                "cwd": "${workspaceRoot}/App_PAL_EndDevice/build"
            },
            "group": "build"
        },
        {
            "label": "Build EndDevice for TWELITE BLUE",
            "type": "shell",
            "windows": {
                "command": "sh",
                "args": [
                    "-c", "make TWELITE=BLUE 2>&1 | sed -E -e s#\\(/mnt\\)?/\\([a-zA-Z]\\)/#\\\\\\2:/#g"
                ],
                "options": {
                    "env": {
                        "PATH": "..\\..\\..\\..\\Tools\\MinGW\\msys\\1.0\\bin"
                    }
                }
            },
            "linux": {
                "command": "sh",
                "args": [
                    "-l", "-c", "make",
                    "TWELITE=BLUE",
                    ""
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "-l", "-c", "make",
                    "TWELITE=BLUE",
                    ""
                ]
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "options": {
                "cwd": "${workspaceRoot}/App_PAL_EndDevice/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build EndDevice for TWELITE RED",
            "type": "shell",
            "windows": {
                "command": "sh",
                "args": [
                    "-c", "make TWELITE=RED 2>&1 | sed -E -e s#\\(/mnt\\)?/\\([a-zA-Z]\\)/#\\\\\\2:/#g"
                ],
                "options": {
                    "env": {
                        "PATH": "..\\..\\..\\..\\Tools\\MinGW\\msys\\1.0\\bin"
                    }
                }
            },
            "linux": {
                "command": "sh",
                "args": [
                    "-l", "-c", "make",
                    "TWELITE=RED",
                    ""
                ]
            },
            "osx": {
                "command": "sh",
                "args": [
                    "-l", "-c", "make",
                    "TWELITE=RED",
                    ""
                ]
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ]
            },
            "options": {
                "cwd": "${workspaceRoot}/App_PAL_EndDevice/build"
            },
            "group": "build"
        },
    ]
}
